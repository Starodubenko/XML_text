<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:simpleType name="MobilePhoneType">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="((?:\+7|8)?(?:\-[0-9]{3}){2}(?:\-[0-9]{2}){2})|((?:\+7|8)?[0-9]{10})"/>
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>