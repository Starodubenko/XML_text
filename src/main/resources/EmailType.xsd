<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:simpleType name="EmailType">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="[A-z0-9\.\_\-]+@[A-z]+\.[A-z]{2,4}"/>
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>